//*****************upper case check**************


void capitals(char *str){
	int i;
	if(*(str+i) > 97){
		printf("true");
		return;
	}
	else if(*(str)<97 && *(str+i+1)>97){
		printf("true");
		return;
	}
	else if(*(str+i) < 97){
		printf("true");
		return;
	}

}
