#include <stdio.h>
#include <stdlib.h>

void selection_sort(int array[],int n){
	int temp;
	for(int i =0;i<n;i++){
		for(int j=1-i;j<n;j++){
			if(array[i]> array[j]){
				temp = array[i];
				array[i] = array[j];
				array[j] = temp;
			}
		}
	}
	for(int k=0;k<n;k++){
			printf("%d\n",array[k]);
		}
}

int main(void) {
	int a[]= {64,54,78,23,10,5,3};
	int n = sizeof(a)/sizeof(a[0]);
	selection_sort(a,n);

	return EXIT_SUCCESS;
}
